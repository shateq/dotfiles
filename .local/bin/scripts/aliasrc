#!/usr/bin/env sh

alias \
yarn="yarn --use-yarnrc \"$XDG_CONFIG_HOME/yarn/config\"" \
conky="conky --config=\"$XDG_CONFIG_HOME/conky/conkyrc\"" \
fastfetch="fastfetch --config $XDG_DATA_HOME/fastfetch.json" \
zshrc="$EDITOR $XDG_CONFIG_HOME/zsh/.zshrc" \
conky-reload="killall -SIGUSR1 conky" \
sxhkd-reload="killall -SIGUSR1 sxhkd" \

alias \
0="clear" \
g="git" \
v="$EDITOR" \
mkd="mkdir -pv" \
rmd="rm -r" \
sln="ln -s" \
chomd="chmod" \
mpva="mpv --no-video" \
copy="dmenu-cb" \
ls="ls -pt --color=always --group-directories-first" \
ll="ls -AhlX --color=always --group-directories-first" \
lt="ls -RU --color=always --group-directories-first" \

alias \
lsbc="lsblk | bat -p -l conf"

no_blank() {
    xset s off
    xset s noblank
    xset -dpms 
}

# Dmenu script that maps a freqently used directories provided in a file
places_store="$XDG_DATA_HOME/dmenu-places.store"

places_get_where() {
    where=$(cat "$places_store" | dmenu -c -l 5 -p "Places")
    echo $where
}

places() {
    place="$HOME/$(places_get_where)"
    cd $place
}

# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

#super key
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

font pango:DejaVu Sans Mono 8

# Keyboard layout
exec --no-startup-id setxkbmap -layout pl
# Start XDG autostart .desktop files using dex.
#exec --no-startup-id dex-autostart --autostart --environment i3
exec_always --no-startup-id picom -b
exec --no-startup-id ~/.fehbg
exec --no-startup-id xrdb ~/.cache/wal/colors.Xresources
# sxhkd for Media buttons
#exec --no-startup-id sxhkd &

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork -i ~/Pictures/Backgrounds/saturnus_png.png

#gaps
gaps inner 8
gaps outer 4
smart_gaps on
#borders
hide_edge_borders smart

# issues with fullscreen apps
workspace_auto_back_and_forth no

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
tiling_drag modifier
focus_follows_mouse yes
# its just me, but right alignment>>>
title_align right

# KEYBIND
include keybind.conf

# Start i3bar to display a workspace bar 
bar {
        status_command i3status -c ~/.config/i3/i3status/i3status.conf
        separator_symbol "::"

        workspace_min_width 18px

        tray_padding 4px
        #tray_output primary
        #colors { }
}

assign [class="Spotify"] 2
assign [class="vesktop"] 2
assign [class="steam"] 3
assign [class="org.mozilla.firefox"] 9

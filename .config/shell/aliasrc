#!/usr/bin/env sh

alias \
yarn="yarn --use-yarnrc \"$XDG_CONFIG_HOME/yarn/config\"" \
conky="conky --config=\"$XDG_CONFIG_HOME/conky/conkyrc\"" \
conky-reload="killall -SIGUSR1 conky" \
sxhkd-reload="killall -SIGUSR1 sxhkd" \
waybar-reload="killall -SIGUSR2 waybar" \

#: gnu
alias \
0="clear" \
g="git" \
v="$EDITOR" \
mkd="mkdir -pv" \
rmd="rm -r" \
sln="ln -s" \
lsbc="lsblk | bat -p -l conf" \
ls="ls -pt --color=always" \
ll="ls -AhlX --color=always" \
lt="ls -RU --color=always" \
#: pipes
alias -g \
A="| awk" \
E="| nvim -" \
G="| grep" \
L="| less" \

command -v "soffice" >/dev/null && alias doc2pdf="soffice --convert-to pdf"
#: linux only
command -v "xdg-open" >/dev/null && alias open="setsid xdg-open"

json-format() {
    jq '.' $1 | sponge $1
}
